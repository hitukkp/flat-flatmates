<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:gravity="center"
            android:padding="@dimen/abc_action_bar_default_height_material"
            android:text="Provide Additional Details"
            android:textColor="#CCC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/hostDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:clickable="true"
            android:text="Description"
            android:textColor="#CCC"
            android:textSize="25sp" />

        <Button
            android:id="@+id/hostAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:clickable="true"
            android:text="Amenities"
            android:textColor="#CCC"
            android:textSize="25sp" />

        <Button
            android:id="@+id/hostPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:clickable="true"
            android:text="My Preferences"
            android:textColor="#CCC"
            android:textSize="25sp" />

        <Button
            android:id="@+id/hostUploadImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:clickable="true"
            android:text="Upload Images"
            android:textColor="#CCC"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/hostSaveDescriptionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:height="40dp"
            android:background="@color/primaryColorDark"
            android:clickable="true"
            android:gravity="center|center_horizontal"
            android:text="Save"
            android:textColor="#CCC"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>